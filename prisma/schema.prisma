generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// npx prisma migrate dev --name init     # cria migração do banco
// npx prisma db pull --force                  # gera os models apartir do DB
// npx prisma generate                    # define as tipagens das tabelas

model tb_menasures {
  id        Int      @id @default(autoincrement())
  menasure  Decimal  @db.Decimal(5, 2)
  date_time DateTime @default(now())
}
